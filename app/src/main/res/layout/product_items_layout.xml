<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp"
    app:cardCornerRadius="20dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/TxtProductNameDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/coloBlueDark"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/TxtProductNameDisplay"
            android:id="@+id/PictProduct"
            android:scaleType="center"
            android:padding="10dp"

            />
        <TextView
            android:id="@+id/TxtProductPriceDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Desc"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/coloBlueMedium"
            android:layout_below="@id/PictProduct"
            />
        <TextView
            android:id="@+id/TxtProductDescriptionDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Desc"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/coloBlueMedium"
            android:layout_below="@id/TxtProductPriceDisplay"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            />

    </RelativeLayout>



</android.support.v7.widget.CardView>