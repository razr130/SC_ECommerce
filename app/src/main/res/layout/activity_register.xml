<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@drawable/bg2">


    <!--<ImageView-->
        <!--android:id="@+id/logo"-->
        <!--android:layout_width="300dp"-->
        <!--android:layout_height="100dp"-->
        <!--android:src="@drawable/spacecolony"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginTop="100dp"-->

        <!--/>-->
    <TextView
        android:id="@+id/TxtTitle"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:text="Register"
        android:textSize="50dp"
        android:textColor="@color/coloBlueDark"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="150dp"
        />
    <EditText
        android:id="@+id/TxtNamaRegis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TxtTitle"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:hint="Name"
        android:textColor="@color/coloBlueDark"
        android:textColorHint="@color/coloBlueLight"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:id="@+id/TxtPhoneRegis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TxtNamaRegis"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:hint="Phone Number"
        android:inputType="number"
        android:textColor="@color/coloBlueDark"
        android:textColorHint="@color/coloBlueLight"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:id="@+id/TxtPasswordRegis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TxtPhoneRegis"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/coloBlueDark"
        android:textColorHint="@color/coloBlueLight"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />
    <Button

        android:id="@+id/btn_regis"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/TxtPasswordRegis"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/buttons"
        android:padding="20dp"
        android:text="Register"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:textSize="20dp" />
</RelativeLayout>